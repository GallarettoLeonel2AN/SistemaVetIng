@using X.PagedList.Mvc.Core
@model SistemaVetIng.ViewsModels.VeterinarioPaginaPrincipalViewModel
@{
    ViewData["Title"] = "VetIng - Veterinario";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
          integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/veterinario-home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/administracion-home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/veterinary-dashboard.css" asp-append-version="true" />
</head>

<body>
    <header class="main-header">
        <a href="/Veterinario/PaginaPrincipal" class="logo"><i class="fa-solid fa-paw"></i> VetIng</a>
        <nav class="main-nav">
            <ul class="nav-list">
                <li><a class="nav-link" href="#resumen">Resumen</a></li>
                <li><a class="nav-link" href="#clientes">Clientes</a></li>
                <li><a class="nav-link" href="#mascotas">Mascotas</a></li>
                <li><a class="nav-link" href="#seguimiento-clinico">Seguimiento Clínico</a></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                        <button type="submit" class="btn sesion nav-button">Cerrar Sesión</button>
                    </form>
                </li>
            </ul>
        </nav>
        <div class="hamburger-menu">
            <i class="fa-solid fa-bars"></i>
        </div>
    </header>

    <main class="v1-main-dashboard">

        <section id="resumen" class="v1-section">
            <h2 class="v1-section-title">Resumen del Día</h2>
            <div class="v1-card-grid">
                <div class="v1-card">
                    <div class="v1-card-header">
                        <h3 class="v1-card-title">Citas para Hoy</h3>
                        <i class="fa-regular fa-calendar-days v1-card-icon"></i>
                    </div>
                    <div class="v1-card-content">
                        <div class="v1-card-value">
                            @* Reemplaza este valor estático con @Model.CantidadCitasHoy *@
                            5
                        </div>
                        <p class="v1-card-description">+2 desde ayer</p>
                    </div>
                </div>
                <div class="v1-card">
                    <div class="v1-card-header">
                        <h3 class="v1-card-title">Pacientes Atendidos</h3>
                        <i class="fa-solid fa-paw v1-card-icon"></i>
                    </div>
                    <div class="v1-card-content">
                        <div class="v1-card-value">
                            @* Reemplaza este valor estático con @Model.CantidadMascotasAtendidas *@
                            12
                        </div>
                        <p class="v1-card-description">+3 nuevas este mes</p>
                    </div>
                </div>
                <div class="v1-card">
                    <div class="v1-card-header">
                        <h3 class="v1-card-title">Ingresos Propios</h3>
                        <i class="fa-solid fa-file-invoice-dollar v1-card-icon"></i>
                    </div>
                    <div class="v1-card-content">
                        <div class="v1-card-value">
                            @* Reemplaza este valor estático con @Model.IngresosMensuales.ToString("N0") *@
                            $1.250
                        </div>
                        <p class="v1-card-description">+8% vs mes anterior</p>
                    </div>
                </div>
            </div>
        </section>

        <section id="turnos" class="v1-section">
                <div class="v1-card v1-appointment-list-card">
                    <div class="v1-card-header">
                        <h3 class="v1-card-title">Citas de Hoy (@Model.CitasDeHoy.Count)</h3>
                        <p class="v1-card-description">Citas programadas para el @DateTime.Today.ToString("dd/MM/yyyy")</p>
                    </div>
                    <div class="v1-card-content v1-appointment-list-content">

                        @if (Model.CitasDeHoy.Any())
                        {
                            @foreach (var turno in Model.CitasDeHoy)
                            {
                                <div class="v1-appointment-item">
                                    <div class="v1-appointment-info">
                                        <i class="fa-regular fa-clock v1-appointment-icon"></i>
                                        <div>
                                            <p class="v1-appointment-time">@turno.Horario.ToString(@"hh\:mm") hs</p>

                                            @if (turno.PrimeraCita)
                                            {
                                                <p class="v1-appointment-pet primeraCita">Primera Cita</p>
                                            }
                                            else
                                            {
                                                <p class="v1-appointment-pet">Mascota: @(turno.NombreMascota ?? "Sin mascota")</p>
                                            }

                                            <p class="v1-appointment-owner">Cliente: @turno.NombreCliente</p>
                                        </div>
                                    @if (turno.Estado == "Pendiente")
                                    {
                                        <div class="v1-appointment-actions">
                                            <a asp-controller="AtencionVeterinaria" asp-action="RegistrarAtencionConTurno" asp-route-turnoId="@turno.Id" class="v1-btn v1-btn-primary">
                                                <i class="fa-solid fa-file-waveform"></i> Registrar Atención
                                            </a>
                                        </div>
                                        <form asp-controller="Turno" asp-action="CancelarTurnoAdmin" method="post" onsubmit="return confirm('¿Estás seguro de cancelar este turno?');" style="display: inline-block; margin-left: 5px;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="turnoId" value="@turno.Id" />
                                            <button type="submit" class="v1-btn-cancelar">
                                                <i class="fas fa-calendar-times"></i> Cancelar
                                            </button>
                                        </form>
                                        <form asp-controller="Turno" asp-action="MarcarNoAsistio" method="post" onsubmit="return confirm('¿Confirmar que el cliente no asistió a este turno?');" style="display: inline-block; margin-left: 5px;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="turnoId" value="@turno.Id" />
                                            <button type="submit" class="v1-btn-ausente">
                                                <i class="fas fa-user-slash"></i> Ausente
                                            </button>
                                        </form>
                                    }
                                    </div>
                                    <div class="v1-appointment-badges">
                                        @if (!string.IsNullOrWhiteSpace(turno.Motivo))
                                        {
                                            <span class="v1-badge v1-badge-secondary">@turno.Motivo</span>
                                        }

                                    <span class="v1-badge @(turno.Estado == "Finalizado" ? "v1-badge-green" : (turno.Estado == "Pendiente" ? "v1-badge-yellow" : (turno.Estado == "Cancelado" ? "v1-badge-red" : (turno.Estado == "No Asistió" ? "v1-badge-orange" : "v1-badge-gray")))) ">
                                            @turno.Estado
                                        </span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="v1-empty-state">No hay citas programadas para hoy.</div>
                        }
                    </div>
                </div>
        </section>

        <section id="clientes" class="v1-section">
            <h2 class="v1-section-title">Gestión de Clientes</h2>
            <div class="v1-section-actions">
                <a asp-controller="Cliente" asp-action="RegistrarCliente" class="v1-btn v1-btn-primary">
                    <i class="fa-solid fa-plus"></i> Registrar Nuevo
                </a>

                <form asp-controller="Veterinario" asp-action="PaginaPrincipal" method="get" class="v1-search-form">
                    <div class="v1-input-group">
                        <i class="fa-solid fa-search v1-input-icon"></i>
                        <input type="text" id="busquedaCliente" name="busquedaCliente" placeholder="Buscar por DNI, Nombre..." class="v1-input" value="@Context.Request.Query["busquedaCliente"]" />
                    </div>
                </form>
            </div>
            <div class="v1-card">
                <div class="v1-card-header">
                    <h3 class="v1-card-title">Lista de Clientes</h3>
                </div>
                <div class="v1-card-content v1-list-content">
                    @if (Model.Clientes != null && Model.Clientes.Any())
                    {
                        @foreach (var cliente in Model.Clientes)
                        {
                            <div class="v1-list-item">
                                <div class="v1-list-info">
                                    <div class="v1-avatar">@(cliente.NombreCompleto.Split(' ').FirstOrDefault()?.FirstOrDefault())@(cliente.NombreCompleto.Split(' ').LastOrDefault()?.FirstOrDefault())</div>
                                    <div>
                                        <p class="v1-list-name">@cliente.NombreCompleto</p>
                                        <p class="v1-list-subtext">Dni: @cliente.DNI</p>
                                        <p class="v1-list-subtext-small">Telefono: @cliente.Telefono</p>
                                        <p class="v1-list-subtext-small">Usuario: @cliente.NombreUsuario</p>
                                    </div>
                                </div>
                                <div class="v1-list-actions">
                                    <a asp-controller="Cliente" asp-action="ModificarCliente" asp-route-id="@cliente.Id" class="v1-btn v1-btn-ghost"><i class="fa-solid fa-edit"></i></a>
                                    <form asp-controller="Cliente" asp-action="EliminarCliente" asp-route-id="@cliente.Id" method="post" onsubmit="return confirm('¿Estás seguro de que quieres eliminar a este cliente?');" style="display:inline;">
                                        @Html.AntiForgeryToken() 
                                        <button type="submit" class="v1-btn v1-btn-ghost v1-text-danger"><i class="fa-solid fa-trash"></i></button>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="v1-empty-state">
                            @if (!string.IsNullOrEmpty(Context.Request.Query["busquedaCliente"]))
                            {
                                <span>No se encontraron clientes que coincidan con "@Context.Request.Query["busquedaCliente"]".</span>
                            }
                            else
                            {
                                <span>No hay clientes registrados.</span>
                            }
                        </div>
                    }
                </div>

                <div class="v1-card-footer pagination-container">
                    @if (Model.PaginacionClientes != null && Model.PaginacionClientes.PageCount > 1)
                    {
                        @Html.PagedListPager(Model.PaginacionClientes, page => Url.Action("PaginaPrincipal", "Veterinario",
                        new { page, busquedaCliente = Context.Request.Query["busquedaCliente"]}),
                                        new PagedListRenderOptions
                                        {
                                            LiElementClasses = new string[] { "page-item" },
                                            PageClasses = new string[] { "page-link" },
                                            DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
                                            DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded,
                                            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                                            DisplayLinkToNextPage = PagedListDisplayMode.Always,
                                            ContainerDivClasses = new[] { "pagination justify-content-center" }
                                        })
                                        }
                    else if (Model.PaginacionClientes != null)
                    {
                        <p class="text-muted text-center">Mostrando @Model.PaginacionClientes.TotalItemCount @(Model.PaginacionClientes.TotalItemCount == 1 ? "cliente" : "clientes")</p>
                    }
                </div>
            </div>
        </section>

        <section id="mascotas" class="v1-section">
            <h2 class="v1-section-title">Gestión de Mascotas</h2>
            <div class="v1-section-actions">
                <a asp-controller="Mascota" asp-action="RegistrarMascota" class="v1-btn v1-btn-primary">
                    <i class="fa-solid fa-plus"></i> Registrar Nueva
                </a>
                <form asp-controller="Veterinario" asp-action="PaginaPrincipal" method="get" class="v1-search-form">
                    <div class="v1-input-group">
                        <i class="fa-solid fa-search v1-input-icon"></i>
                        <input type="text" id="busquedaMascota" name="busquedaMascota" placeholder="Buscar por DNI del dueño" class="v1-input" />
                    </div>
                </form>
            </div>
            <div class="v1-card">
                <div class="v1-card-header">
                    <h3 class="v1-card-title">Registro de Mascotas</h3>
                </div>
                <div class="v1-card-content v1-list-content">
                    @if (Model.Mascotas != null && Model.Mascotas.Any())
                    {
                        @foreach (var mascota in Model.Mascotas)
                        {
                            <div class="v1-list-item">
                                <div class="v1-list-info">
                                    <div class="v1-pet-icon-bg">
                                        <i class="fa-solid fa-heart v1-pet-icon"></i>
                                    </div>
                                    <div>
                                        <p class="v1-list-name">@mascota.NombreMascota</p>
                                        <p class="v1-list-subtext">@mascota.Especie &bull; @mascota.Raza</p>
                                        <p class="v1-list-subtext-small">Propietario: @mascota.NombreDueno</p>
                                    </div>
                                </div>
                                <div class="v1-list-actions">
                                    <a asp-controller="Mascota" asp-action="ModificarMascota" asp-route-id="@mascota.Id" class="v1-btn v1-btn-ghost"><i class="fa-solid fa-edit"></i></a>
                                    <form asp-controller="Mascota" asp-action="EliminarMascota" asp-route-id="@mascota.Id" method="post" onsubmit="return confirm('¿Estás seguro de que quieres eliminar a esta mascota?');" style="display:inline;">
                                        <button type="submit" class="v1-btn v1-btn-ghost v1-text-danger"><i class="fa-solid fa-trash"></i></button>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="v1-empty-state">No hay mascotas registradas.</div>
                    }
                </div>
            </div>
        </section>

        <section id="seguimiento-clinico" class="v1-section">
            <h2 class="v1-section-title">Seguimiento Clínico</h2>
            <div class="v1-section-actions">
                <a asp-controller="HistoriaClinica" asp-action="ListaClientesParaSeguimiento" class="v1-btn v1-btn-primary">
                    <i class="fa-solid fa-file-waveform"></i> Nuevo Registro Clínico
                </a>
            </div>
        </section>
    </main>

    <footer class="main-footer">
        <div class="footer-col footer-info">
            <div class="footer-logo-container"> <i class="fa-solid fa-paw footer-logo-icon"></i> <h3 class="footer-brand">VetIng Software</h3> </div>
            <p class="footer-description">Soluciones tecnológicas para un cuidado animal excepcional.</p>
            <div class="footer-social-icons">
                <a href="#"><i class="fa-brands fa-instagram"></i></a>
                <a href="#"><i class="fa-brands fa-facebook"></i></a>
                <a href="#"><i class="fa-brands fa-youtube"></i></a>
                <a href="#"><i class="fa-brands fa-twitter"></i></a>
            </div>
        </div>
        <div class="footer-col">
            <h4 class="footer-heading">Acerca de VetIng</h4>
            <ul class="footer-links">
                <li><a href="#">Nuestra Historia</a></li>
                <li><a href="#">Equipo</a></li>
                <li><a href="#">Noticias y Blog</a></li>
                <li><a href="#">Fundación VetIng</a></li>
            </ul>
        </div>
        <div class="footer-col">
            <h4 class="footer-heading">Soporte</h4>
            <ul class="footer-links">
                <li><a href="#">Preguntas Frecuentes</a></li>
                <li><a href="#">Contacto</a></li>
                <li><a href="#">Guías de Usuario</a></li>
                <li><a href="#">Descargar App Móvil</a></li>
            </ul>
        </div>
        <div class="footer-col">
            <h4 class="footer-heading">Legal</h4>
            <ul class="footer-links">
                <li><a href="#">Términos y Condiciones</a></li>
                <li><a href="#">Política de Privacidad</a></li>
                <li><a href="#">Aviso Legal</a></li>
                <li><a href="#">Cookies</a></li>
            </ul>
        </div>
        <div class="footer-bottom">
            <p>&copy; @DateTime.Now.Year VetIng Software. Todos los derechos reservados. | Proyecto de Ulises Sosa y Leonel Gallaretto</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/menuhamburguesa.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("NToastNotify")
</body>
</html>