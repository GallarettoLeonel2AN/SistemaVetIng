@using System.Globalization
@using X.PagedList.Mvc.Core
@using X.PagedList
@model IPagedList<SistemaVetIng.ViewsModels.VacunaViewModel>

@{
    ViewData["Title"] = "Catálogo de Vacunas";
}

<h1>@ViewData["Title"]</h1>

<p class="mb-4">
    <a asp-action="Crear" class="btn btn-success">
        <i class="fas fa-plus"></i> Agregar Nueva Vacuna
    </a>
</p>

<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="busqueda" value="@ViewBag.Busqueda" class="form-control" placeholder="Buscar por Nombre o Lote..." />
        <div class="input-group-append">
            <button type="submit" class="btn btn-info"><i class="fas fa-search"></i> Buscar</button>
            <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.First().Lote)</th>
                <th>@Html.DisplayNameFor(model => model.First().Precio)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Lote)</td>
                    <td>@item.Precio.ToString("C2", new CultureInfo("es-AR"))</td> @* Muestra el precio con formato de moneda *@
                    <td>
                        <a asp-action="Modificar" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Editar"><i class="fas fa-edit"></i></a>
                        <form asp-action="Eliminar" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('¿Está seguro de que desea eliminar esta vacuna?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger" title="Eliminar"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.PageCount > 1)
{
    @Html.PagedListPager(Model, page => Url.Action("Index",
                        new { page, busqueda = ViewBag.Busqueda }),
                        new PagedListRenderOptions
                {
                    LiElementClasses = new string[] { "page-item" },
                    PageClasses = new string[] { "page-link" }
                }
                    )
}