@model SistemaVetIng.ViewsModels.VacunaViewModel

@{
    ViewData["Title"] = "Registrar Nueva Vacuna";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ajusta esto a tu layout principal si es diferente
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Cargar Nueva Vacuna de Catálogo</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8 offset-md-2">

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <form asp-action="Crear" method="post">

                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Séxtuple Canina, Antirrábica" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Lote" class="control-label"></label>
                        <input asp-for="Lote" class="form-control" placeholder="Ej: LOTE-ABC-2024" />
                        <span asp-validation-for="Lote" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Precio" class="control-label"></label>
                        <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0.01" placeholder="Ej: 1500.00" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-between">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-save"></i> Guardar Vacuna
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Volver al Listado
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}