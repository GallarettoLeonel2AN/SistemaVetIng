@model List<SistemaVetIng.Models.Memento.AtencionVeterinariaMemento>

@{
    ViewData["Title"] = "Historial de Cambios";
    Layout = null;
    string controllerDestino = User.IsInRole("Veterinario") ? "Veterinario" : "Veterinaria";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/veterinario-home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/veterinary-dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/administracion-home.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        body {
            background-color: #f4f7f6;
        }

        /* Estilos para la línea de tiempo */
        .timeline {
            position: relative;
            padding: 20px 0;
        }

        .timeline-item {
            position: relative;
            padding-left: 40px;
            margin-bottom: 30px;
        }

            /* La línea vertical */
            .timeline-item::before {
                content: '';
                position: absolute;
                left: 15px;
                top: 0;
                bottom: -30px;
                width: 2px;
                background-color: #dee2e6;
            }

            .timeline-item:last-child::before {
                display: none;
            }

        /* El punto (círculo) */
        .timeline-marker {
            position: absolute;
            left: 0;
            top: 0;
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background-color: #6c757d;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1;
        }

        /* La tarjeta del evento */
        .timeline-content {
            background: white;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            border: 1px solid #e9ecef;
        }

        .restore-btn {
            background-color: #28a745;
            color: white;
            border: none;
        }

            .restore-btn:hover {
                background-color: #218838;
                color: white;
            }

        .diff-box {
            background-color: #f8f9fa;
            padding: 10px;
            border-radius: 5px;
            border-left: 3px solid #17a2b8;
            font-size: 0.9em;
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <header class="main-header">
        <a href="#" class="logo"><i class="fa-solid fa-paw"></i> VetIng</a>
        <nav class="main-nav">
            <ul class="nav-list">
                <li><a class="nav-link" href="/@controllerDestino/PaginaPrincipal">Volver al Inicio</a></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                        <button type="submit" class="btnlogout btn-primary nav-button">Cerrar Sesión</button>
                    </form>
                </li>
            </ul>
        </nav>
        <div class="hamburger-menu">
            <i class="fa-solid fa-bars"></i>
        </div>
    </header>

    <main class="v1-main-dashboard" style="padding-top: 100px;">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="v1-section-title mb-0"><i class="fa-solid fa-clock-rotate-left"></i> Historial de Versiones</h2>
                    <p class="text-muted mt-1">
                        Mascota: <strong>@ViewData["MascotaNombre"]</strong> <span class="mx-2">|</span> Atención ID: #@ViewData["AtencionId"]
                    </p>
                </div>
                <button onclick="window.close()" class="v1-btn v1-btn-secondary">
                    <i class="fa-solid fa-times"></i> Cerrar Historial
                </button>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="text-center p-5 bg-white rounded shadow-sm">
                    <div class="mb-3 text-muted opacity-50">
                        <i class="fa-solid fa-file-circle-check fa-4x"></i>
                    </div>
                    <h4>No hay versiones anteriores</h4>
                    <p class="text-muted">Esta atención nunca ha sido modificada. La versión actual es la original.</p>
                </div>
            }
            else
            {
                <div class="timeline">
                    @foreach (var version in Model)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker bg-secondary">
                                <i class="fa-solid fa-clock"></i>
                            </div>

                            <div class="timeline-content">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h5 class="mb-1 fw-bold">Versión del @version.FechaVersion.ToString("dd/MM/yyyy")</h5>
                                        <small class="text-muted">
                                            <i class="fa-solid fa-clock"></i> @version.FechaVersion.ToString("HH:mm")
                                            <span class="mx-2">•</span>
                                            <i class="fa-solid fa-user"></i> Editado por: <strong>@version.UsuarioEditor</strong>
                                        </small>
                                    </div>

                                    <form asp-action="Restaurar" method="post" onsubmit="return confirm('¿Estás seguro de querer restaurar esta versión antigua? Se perderán los cambios posteriores.');">
                                        <input type="hidden" name="mementoId" value="@version.Id" />
                                        <button type="submit" class="v1-btn v1-btn-sm restore-btn">
                                            <i class="fa-solid fa-rotate-left"></i> Restaurar esta versión
                                        </button>
                                    </form>
                                </div>

                                <hr class="my-2" />

                                <p class="mb-2">
                                    <strong>Motivo del cambio anterior:</strong>
                                    <span class="fst-italic text-dark">"@(version.MotivoCambio ?? "Sin motivo especificado")"</span>
                                </p>

                                <div class="diff-box">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>Diagnóstico:</strong><br />
                                            @version.Diagnostico
                                        </div>
                                        <div class="col-md-3">
                                            <strong>Peso:</strong> @version.PesoMascota kg
                                        </div>
                                        @if (!string.IsNullOrEmpty(version.TratamientoMedicamento))
                                        {
                                            <div class="col-md-12 mt-2 pt-2 border-top">
                                                <strong>Tratamiento:</strong> @version.TratamientoMedicamento (@version.TratamientoDosis)
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </main>

    <footer class="main-footer">
        <div class="footer-bottom">
            <p>&copy; @DateTime.Now.Year VetIng Software. Todos los derechos reservados.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelector('.hamburger-menu').addEventListener('click', function() {
            document.querySelector('.nav-list').classList.toggle('active');
        });
    </script>
</body>
</html>