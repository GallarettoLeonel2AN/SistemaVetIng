@model SistemaVetIng.ViewsModels.AtencionVeterinariaViewModel


@{
    ViewData["Title"] = $"Nueva Atención para {Model.MascotaNombre}";
    Layout = null;

    string controllerDestino = User.IsInRole("Veterinario") ? "Veterinario" : "Veterinaria";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/veterinario-home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/veterinary-dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/administracion-home.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" xintegrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>

    <header class="main-header">
        <a href="../@controllerDestino/PaginaPrincipal" class="logo"><i class="fa-solid fa-paw"></i> VetIng</a>
        <nav class="main-nav">
            <ul class="nav-list">
                <a asp-controller="HistoriaClinica" asp-action="DetalleHistoriaClinica" asp-route-mascotaId="@Model.MascotaId" class="nav-link">
                  Volver
                </a>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                        <button type="submit" class="btnlogout btn-primary nav-button">Cerrar Sesión</button>
                    </form>
                </li>
            </ul>
        </nav>
        <div class="hamburger-menu">
            <i class="fa-solid fa-bars"></i>
        </div>
    </header>

    <main class="registrar-form-main">
        <section class="form-section">
            <h2 class="section-title">Nueva Atención para <span class="v1-text-primary">@Model.MascotaNombre</span></h2>
            <p class="form-subtitle">Propietario: <strong>@Model.PropietarioNombre</strong></p>

            <form asp-action="RegistrarAtencion" asp-controller="AtencionVeterinaria" method="post" class="main-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="HistoriaClinicaId" />

                <div class="form-group">
                    <label asp-for="Diagnostico" class="v1-control-label"></label>
                    <textarea asp-for="Diagnostico" class="form-control" rows="3" placeholder="Descripción del diagnóstico..."></textarea>
                    <span asp-validation-for="Diagnostico" class="text-danger validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PesoKg" class="v1-control-label"></label>
                    <input asp-for="PesoKg" class="form-control" type="number" step="0.01" placeholder="Ej: 5.25" />
                    <span asp-validation-for="PesoKg" class="text-danger validation-error"></span>
                </div>

                <h4 class="v1-section-title">Tratamiento</h4>
                <div class="form-group">
                    <label asp-for="Medicamento" class="v1-control-label"></label>
                    <input asp-for="Medicamento" class="form-control" placeholder="Ej: Amoxicilina" />
                    <span asp-validation-for="Medicamento" class="text-danger validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dosis" class="v1-control-label"></label>
                    <input asp-for="Dosis" class="form-control" placeholder="Ej: 10mg/kg" />
                    <span asp-validation-for="Dosis" class="text-danger validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Frecuencia" class="v1-control-label"></label>
                    <input asp-for="Frecuencia" class="form-control" placeholder="Ej: Cada 8 horas" />
                    <span asp-validation-for="Frecuencia" class="text-danger validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DuracionDias" class="v1-control-label"></label>
                    <input asp-for="DuracionDias" class="form-control" type="number" placeholder="Duración en días" />
                    <span asp-validation-for="DuracionDias" class="text-danger validation-error"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ObservacionesTratamiento" class="v1-control-label"></label>
                    <textarea asp-for="ObservacionesTratamiento" class="form-control" rows="3" placeholder="Observaciones adicionales sobre el tratamiento..."></textarea>
                    <span asp-validation-for="ObservacionesTratamiento" class="text-danger validation-error"></span>
                </div>


                <h4 class="v1-list-header-flex">
                    <span>Vacunas</span>
                    <button type="button" id="add-vacuna-btn" class="v1-btn v1-btn-sm v1-btn-primary v1-btn-add-atencion">
                        <i class="fas fa-plus-circle"></i> Agregar Vacuna
                    </button>
                </h4>

                <div id="vacunas-container"></div>


                <h4 class="v1-list-header-flex">
                    <span>Estudios Complementarios</span>
                    <button type="button" id="add-estudio-btn" class="v1-btn v1-btn-sm v1-btn-primary v1-btn-add-atencion">
                        <i class="fas fa-plus-circle"></i> Agregar Estudio
                    </button>
                </h4>

                <div id="estudios-container"></div>


                <div class="form-actions mt-4">
                    <button type="submit" class="button register-button">
                        <i class="fas fa-save"></i> Guardar Atención
                    </button>
                    <a asp-controller="HistoriaClinica" asp-action="DetalleHistoriaClinica" asp-route-mascotaId="@Model.MascotaId" class="btnBack">
                        <i class="fas fa-arrow-left"></i> Cancelar y Volver
                    </a>
                </div>
            </form>
        </section>
    </main>

    <footer class="main-footer">
        <div class="footer-col footer-info">
            <div class="footer-logo-container"> <i class="fa-solid fa-paw footer-logo-icon"></i> <h3 class="footer-brand">VetIng Software</h3> </div>
            <p class="footer-description">Soluciones tecnológicas para un cuidado animal excepcional.</p>
            <div class="footer-social-icons">
                <a href="#"><i class="fa-brands fa-instagram"></i></a>
                <a href="#"><i class="fa-brands fa-facebook"></i></a>
                <a href="#"><i class="fa-brands fa-youtube"></i></a>
                <a href="#"><i class="fa-brands fa-twitter"></i></a>
            </div>
        </div>
        <div class="footer-col">
            <h4 class="footer-heading">Acerca de VetIng</h4>
            <ul class="footer-links">
                <li><a href="#">Nuestra Historia</a></li>
                <li><a href="#">Equipo</a></li>
                <li><a href="#">Noticias y Blog</a></li>
                <li><a href="#">Fundación VetIng</a></li>
            </ul>
        </div>
        <div class="footer-col">
            <h4 class="footer-heading">Soporte</h4>
            <ul class="footer-links">
                <li><a href="#">Preguntas Frecuentes</a></li>
                <li><a href="#">Contacto</a></li>
                <li><a href="#">Guías de Usuario</a></li>
                <li><a href="#">Descargar App Móvil</a></li>
            </ul>
        </div>
        <div class="footer-col">
            <h4 class="footer-heading">Legal</h4>
            <ul class="footer-links">
                <li><a href="#">Términos y Condiciones</a></li>
                <li><a href="#">Política de Privacidad</a></li>
                <li><a href="#">Aviso Legal</a></li>
                <li><a href="#">Cookies</a></li>
            </ul>
        </div>
        <div class="footer-bottom">
            <p>&copy; @DateTime.Now.Year VetIng Software. Todos los derechos reservados. | Proyecto de Ulises Sosa y Leonel Gallaretto</p>
        </div>
    </footer>

    <template id="vacuna-template">
        <div class="v1-input-dynamic-group d-flex align-items-center gap-2 mb-2">

            <select class="form-select" required>
                <option value="">Seleccione una vacuna</option>
                @foreach (var vacuna in Model.VacunasDisponibles!)
                {
                    <option value="@vacuna.Value">@vacuna.Text</option>
                }
            </select>

            <button type="button" class="v1-btn-remove btn btn-danger btn-sm">
                <i class="fas fa-trash"></i>
            </button>

        </div>
    </template>

    <template id="estudio-template">
        <div class="v1-input-dynamic-group d-flex align-items-center gap-2 mb-2">

            <select class="form-select" required>
                <option value="">Seleccione un estudio</option>
                @foreach (var estudio in Model.EstudiosDisponibles!)
                {
                    <option value="@estudio.Value">@estudio.Text</option>
                }
            </select>

            <button type="button" class="v1-btn-remove btn btn-danger btn-sm">
                <i class="fas fa-trash"></i>
            </button>

        </div>
    </template>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/atencionVeterinaria.js" asp-append-version="true"></script>

    @await Component.InvokeAsync("NToastNotify")
</body>
</html>