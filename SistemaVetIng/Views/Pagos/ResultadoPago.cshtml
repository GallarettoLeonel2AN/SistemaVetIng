@model SistemaVetIng.ViewsModels.ResultadoPagoViewModel
@{
    // Ajusta el título según el estado del pago
    ViewData["Title"] = "Resultado del Pago";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <h1 class="mb-4">Estado de la Transacción</h1>

            @* Usamos la ClaseAlerta del ViewModel para estilizar el mensaje *@
            <div class="alert @Model.ClaseAlerta" role="alert">
                <h4 class="alert-heading">@Model.Mensaje</h4>
                <hr>
                <p>
                    <strong>ID de Referencia de la Atención:</strong> @Model.AtencionId
                </p>
                @if (Model.ClaseAlerta == "alert-success")
                {
                    <p class="mb-0">
                        Gracias por tu pago. Recibirás la confirmación final por correo.
                    </p>
                }
                else if (Model.ClaseAlerta == "alert-danger")
                {
                    <p class="mb-0">
                        Si el problema persiste, verifica tus datos de pago o intenta con otro medio.
                    </p>
                    <a href="@Url.Action("GenerarLinkDePago", new { idAtencion = Model.AtencionId })" class="btn btn-sm btn-outline-danger mt-2">
                        Intentar pagar de nuevo
                    </a>
                }
            </div>

            <div class="mt-4">
                <a asp-controller="Cliente" asp-action="PaginaPrincipal" class="btn btn-primary">
                    Volver a la Página Principal
                </a>
            </div>

        </div>
    </div>
</div>