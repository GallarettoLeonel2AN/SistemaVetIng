@model SistemaVetIng.Models.Mascota

@{
    ViewData["Title"] = $"Historia Clínica de {Model.Nombre}";
    Layout = null;

    string controllerDestino = User.IsInRole("Veterinario") ? "Veterinario" : "Veterinaria";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/veterinario-home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/veterinary-dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/administracion-home.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
</head>
<body>
    
    <header class="main-header">
        <a href="#" class="logo">
            <i class="fas fa-paw"></i>
            <span>VetIng</span>
        </a>
        <a asp-controller="@controllerDestino" asp-action="PaginaPrincipal" class="sesion">
            <i class="fas fa-arrow-left"></i> Volver al Inicio
        </a>
    </header>

 
    <main class="v1-main-dashboard">
        <section class="v1-section">
            <h1 class="v1-section-title">Historia Clínica de: @Model.Nombre</h1>
            <h3 class="v1-section-subtitle">Propietario: @Model.Propietario?.Nombre @Model.Propietario?.Apellido</h3>

           
            <div class="table-container">
                <table class="table responsive-table">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Especie</th>
                            <th>Raza</th>
                            <th>Fecha de Nacimiento</th>
                            <th>Sexo</th>
                            <th>Raza Peligrosa</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                            <tr>
                            <td data-label="Nombre:">@Model.Nombre</td>
                            <td data-label="Especie:">@Model.Especie</td>
                            <td data-label="Raza:">@Model.Raza</td>
                            <td data-label="FechaNacimiento:">@Model.FechaNacimiento.ToShortDateString()</td>
                            <td data-label="Sexo:">@Model.Sexo</td>
                            <td data-label="RazaPeligrosa:">@(Model.RazaPeligrosa ? "Sí" : "No")</td>
                        </tr>
     
                    </tbody>
                </table>
            </div>

            <div class="v1-section">
                <h4 class="v1-section-title">Atenciones Registradas</h4>

                <div class="v1-section-actions">
                    <a asp-controller="AtencionVeterinaria" asp-action="RegistrarAtencion" asp-route-historiaClinicaId="@Model.HistoriaClinica.Id" class="v1-btn v1-btn-primary">
                        <i class="fa-solid fa-plus"></i> Nueva Atencion
                    </a>
                </div>

            </div>

            @if (Model.HistoriaClinica.Atenciones == null || !Model.HistoriaClinica.Atenciones.Any())
            {
                <div class="empty-state">
                    <i class="fas fa-file-medical-alt fa-3x"></i>
                    <h3>Sin Historial</h3>
                    <p>Aún no hay atenciones registradas para esta mascota.</p>
                </div>
            }
            else
            {
                <div class="attention-history">
                    @foreach (var atencion in Model.HistoriaClinica.Atenciones.OrderByDescending(a => a.Fecha))
                    {
                        <div class="history-card">
                            <div class="history-header">
                                <i class="fas fa-calendar-alt"></i>
                                <div>
                                    <span class="date">@atencion.Fecha.ToString("dd 'de' MMMM 'de' yyyy")</span>
                                    <span class="vet">Atendido por: @(atencion.Veterinario?.Nombre) @(atencion.Veterinario?.Apellido)</span>
                                </div>
                            </div>

                            <div class="history-body">
                                <div class="details-grid">
                                    <div class="details-item">
                                        <label>Diagnóstico</label>
                                        <span>@atencion.Diagnostico</span>
                                    </div>
                                    <div class="details-item">
                                        <label>Peso</label>
                                        <span>@atencion.PesoMascota kg</span>
                                    </div>
                                </div>

                                @if (atencion.Tratamiento != null)
                                {
                                    <div class="history-section">
                                        <h4>Tratamiento Indicado</h4>
                                        <div class="details-grid">
                                            <div class="details-item">
                                                <label>Medicamento</label>
                                                <span>@atencion.Tratamiento.Medicamento</span>
                                            </div>
                                            <div class="details-item">
                                                <label>Dosis</label>
                                                <span>@atencion.Tratamiento.Dosis</span>
                                            </div>
                                            <div class="details-item">
                                                <label>Frecuencia</label>
                                                <span>@atencion.Tratamiento.Frecuencia</span>
                                            </div>
                                            <div class="details-item">
                                                <label>Duración</label>
                                                <span>@atencion.Tratamiento.Duracion días</span>
                                            </div>
                                            @if (!string.IsNullOrWhiteSpace(atencion.Tratamiento.Observaciones))
                                            {
                                                <div class="details-item full-width">
                                                    <label>Observaciones</label>
                                                    <span>@atencion.Tratamiento.Observaciones</span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                @if (atencion.Vacunas != null && atencion.Vacunas.Any())
                                {
                                    <div class="history-section">
                                        <h4>Vacunas Aplicadas</h4>
                                        <div class="tags-list">
                                            @foreach (var vacuna in atencion.Vacunas)
                                            {
                                                <span class="tag-item">@vacuna.Nombre (Lote: @vacuna.Lote)</span>
                                            }
                                        </div>
                                    </div>
                                }

                                @if (atencion.EstudiosComplementarios != null && atencion.EstudiosComplementarios.Any())
                                {
                                    <div class="history-section">
                                        <h4>Estudios Complementarios</h4>
                                        <div class="tags-list">
                                            @foreach (var estudio in atencion.EstudiosComplementarios)
                                            {
                                                <span class="tag-item">
                                                    @estudio.Nombre @(string.IsNullOrWhiteSpace(estudio.Informe) ? "" : $"- Informe: {estudio.Informe}")
                                                </span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>

                            <div class="history-footer">
                                <div class="cost-item">
                                    <label>Costo Total de la Atención</label>
                                    <span class="primeraCita">$ @atencion.CostoTotal.ToString("N2")</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

            <div class="v1-section-actions mt-3">
                <a asp-action="MascotasCliente"
                   asp-route-clienteId="@Model.ClienteId"
                   class="btnBack">
                    <i class="fas fa-arrow-left"></i> Volver a las mascotas del cliente
                </a>
            </div>
        </section>
    </main>

   
    <footer class="main-footer">
        <div class="footer-col footer-info">
            <div class="footer-logo-container">
                <i class="fa-solid fa-paw footer-logo-icon"></i>
                <h3 class="footer-brand">VetIng Software</h3>
            </div>
            <p class="footer-description">Soluciones tecnológicas para un cuidado animal excepcional.</p>
            <div class="footer-social-icons">
                <a href="#"><i class="fa-brands fa-instagram"></i></a>
                <a href="#"><i class="fa-brands fa-facebook"></i></a>
                <a href="#"><i class="fa-brands fa-youtube"></i></a>
                <a href="#"><i class="fa-brands fa-twitter"></i></a>
            </div>
        </div>
        <div class="footer-col">
            <h4 class="footer-heading">Acerca de VetIng</h4>
            <ul class="footer-links">
                <li><a href="#">Nuestra Historia</a></li>
                <li><a href="#">Equipo</a></li>
                <li><a href="#">Noticias y Blog</a></li>
                <li><a href="#">Fundación VetIng</a></li>
            </ul>
        </div>
        <div class="footer-col">
            <h4 class="footer-heading">Soporte</h4>
            <ul class="footer-links">
                <li><a href="#">Preguntas Frecuentes</a></li>
                <li><a href="#">Contacto</a></li>
                <li><a href="#">Guías de Usuario</a></li>
                <li><a href="#">Descargar App Móvil</a></li>
            </ul>
        </div>
        <div class="footer-col">
            <h4 class="footer-heading">Legal</h4>
            <ul class="footer-links">
                <li><a href="#">Términos y Condiciones</a></li>
                <li><a href="#">Política de Privacidad</a></li>
                <li><a href="#">Aviso Legal</a></li>
                <li><a href="#">Cookies</a></li>
            </ul>
        </div>
        <div class="footer-bottom">
            <p>&copy; @DateTime.Now.Year VetIng Software. Todos los derechos reservados. | Proyecto de Ulises Sosa y Leonel Gallaretto</p>
        </div>
    </footer>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await Component.InvokeAsync("NToastNotify")
</body>
</html>
