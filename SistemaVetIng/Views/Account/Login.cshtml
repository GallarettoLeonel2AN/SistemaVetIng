  @model SistemaVetIng.ViewModels.LoginViewModel;

@{
    ViewData["Title"] = "Iniciar Sesion";
    Layout = null; // Puedes mantenerlo en null si esta vista no usa un _Layout.cshtml global
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/login-styles.css"> @* Asegúrate de que la ruta a tu CSS sea correcta *@
    <title>Login</title>
</head>

<body>
    <main>
        <div class="login-container">
            <div class="container-img-login"></div>
            <div class="container-formulario">
                <div class="ingreso-correo">
                    <div class="responsive"></div>
                    <h1>Iniciar sesión en VetIng</h1>
                    <div class="icons">
                        <a href="#"><i class="fa-brands fa-google"></i></a>
                        <a href="#"><i class="fa-brands fa-twitter"></i></a>
                    </div>
                </div>
                <div class="formulario">
                    @* Aquí indicamos que esta vista usa LoginViewModel *@
                  

                    @* Formulario que enviará los datos al método Login del AccountController *@
                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        @* Token de seguridad para prevenir ataques CSRF *@
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div> @* Mostrar errores de validación generales *@

                        <label asp-for="UserName"></label> @* Usamos asp-for para enlazar con la propiedad UserName del ViewModel *@
                        <input asp-for="UserName" id="name" />
                        <span asp-validation-for="UserName" class="text-danger"></span> @* Mostrar errores de validación para UserName *@

                        <label asp-for="Password"></label> @* Usamos asp-for para enlazar con la propiedad Password del ViewModel *@
                        <input asp-for="Password" id="pass" />
                        <span asp-validation-for="Password" class="text-danger"></span> @* Mostrar errores de validación para Password *@
                        

                        <button type="submit" class="button">Ingresar</button> @* Cambiado a button type="submit" *@
                      
                        <p>No eres miembro? <a asp-controller="Cliente" asp-action="Registro" class="signUp"> Registrarme </a></p> @* Ajusta la ruta a tu página de registro *@
                        
                        <a asp-controller="Account" asp-action="RecuperarContraseña">¿Olvidaste tu contraseña?</a>
                    </form>

                </div>
            </div>

        </div>
    </main>

    @* Scripts para validación del lado del cliente (opcional pero recomendado) *@
    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }

</body>

</html>