@model ManageUserRolesPageViewModel
@{
    ViewData["Title"] = "Gestión de Roles de Usuario";
    Layout = null;
}

<h1><i class="fa-solid fa-users-cog"></i> Gestión de Roles por Usuario</h1>
<p>Selecciona un usuario para asignar o quitar sus roles (grupos).</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<hr />

<form asp-action="GestionRolesUsuario" method="get">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="userSelect" class="form-label">Seleccionar Usuario:</label>
                <select asp-for="SelectedUserId" asp-items="Model.UsersList" class="form-select" onchange="this.form.submit();">
                    <option value="">-- Selecciona un usuario --</option>
                </select>
            </div>
        </div>
    </div>
</form>

<hr />

@if (Model.RolesForm != null && Model.RolesForm.Roles.Any())
{
    <h2>Roles para: @Model.RolesForm.UserName</h2>

    <form asp-action="GestionRolesUsuario" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="RolesForm.UserId" />
        <input type="hidden" asp-for="RolesForm.UserName" />

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Rol (Grupo)</th>
                    <th>Asignado</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.RolesForm.Roles.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="RolesForm.Roles[i].RoleId" />
                            <input type="hidden" asp-for="RolesForm.Roles[i].RoleName" />
                            @Model.RolesForm.Roles[i].RoleName
                        </td>
                        <td>
                            <input asp-for="RolesForm.Roles[i].IsSelected" class="form-check-input" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-save"></i> Guardar Roles
            </button>
        </div>
    </form>
}