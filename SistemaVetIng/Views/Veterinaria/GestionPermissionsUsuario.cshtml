@model ManageUserPermissionsPageViewModel
@{
    ViewData["Title"] = "Gestión de Permisos de Usuario";
    Layout = null;
}

<h1><i class="fa-solid fa-user-shield"></i> Gestión de Permisos por Usuario</h1>
<p>Selecciona un usuario para ver y modificar sus permisos individuales (hojas sueltas).</p>
<div class="alert alert-info">Nota: Los permisos mostrados aquí son <strong>adicionales</strong> a los permisos que el usuario ya hereda de sus roles.</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<hr />

<form asp-action="GestionPermissionsUsuario" method="get">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="userSelect" class="form-label">Seleccionar Usuario:</label>
                <select asp-for="SelectedUserId" asp-items="Model.UsersList" class="form-select" onchange="this.form.submit();">
                    <option value="">-- Selecciona un usuario --</option>
                </select>
            </div>
        </div>
    </div>
</form>

<hr />

@if (Model.PermissionsForm != null && Model.PermissionsForm.Permissions.Any())
{
    <h2>Permisos Individuales para: @Model.PermissionsForm.UserName</h2>

    <form asp-action="GestionPermissionsUsuario" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="PermissionsForm.UserId" />
        <input type="hidden" asp-for="PermissionsForm.UserName" />

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Permiso (Módulo - Acción)</th>
                    <th>Permitido</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.PermissionsForm.Permissions.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="PermissionsForm.Permissions[i].Type" />
                            <input type="hidden" asp-for="PermissionsForm.Permissions[i].Value" />
                            <input type="hidden" asp-for="PermissionsForm.Permissions[i].DisplayName" />

                            @Model.PermissionsForm.Permissions[i].DisplayName
                        </td>
                        <td>
                            <input asp-for="PermissionsForm.Permissions[i].IsSelected" class="form-check-input" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-save"></i> Guardar Cambios de Usuario
            </button>
        </div>
    </form>
}
else if (!string.IsNullOrEmpty(Model.SelectedUserId))
{
    <div class="alert alert-warning">No se pudieron cargar los permisos para este usuario.</div>
}