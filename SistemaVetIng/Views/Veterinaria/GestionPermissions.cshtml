@using SistemaVetIng.ViewsModels

@model ManagePermissionsPageViewModel

@{
    ViewData["Title"] = "Gestión de Permissions";
    Layout = null;
}

<h1><i class="fa-solid fa-shield-halved"></i> Gestión de Permissions por Rol</h1>
<p>Selecciona un rol (grupo) para ver y modificar sus Permissions (hojas).</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<hr />

<form asp-action="GestionPermissions" method="get">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="roleSelect" class="form-label">Seleccionar Rol:</label>
                <select asp-for="SelectedRoleId" asp-items="Model.RolesList" class="form-select" onchange="this.form.submit();">
                    <option value="">-- Selecciona un rol --</option>
                </select>
            </div>
        </div>
    </div>
</form>

<hr />

@if (Model.PermissionsForm != null && Model.PermissionsForm.Permissions.Any())
{
    <h2>Permissions para el Rol: @Model.PermissionsForm.RoleName</h2>

    <form asp-action="ManagePermissions" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="PermissionsForm.RoleId" />
        <input type="hidden" asp-for="PermissionsForm.RoleName"  />

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Permission (Módulo - Acción)</th>
                    <th>Permitido</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.PermissionsForm.Permissions.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="PermissionsForm.Permissions[i].Type" />
                            <input type="hidden" asp-for="PermissionsForm.Permissions[i].Value" />
                            <input type="hidden" asp-for="PermissionsForm.Permissions[i].DisplayName" />

                            @Model.PermissionsForm.Permissions[i].DisplayName
                        </td>
                        <td>
                            <input asp-for="PermissionsForm.Permissions[i].IsSelected" class="form-check-input" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-save"></i> Guardar Cambios
            </button>
        </div>
    </form>
}
else if (!string.IsNullOrEmpty(Model.SelectedRoleId))
{
    <div class="alert alert-warning">No se pudieron cargar los Permissions para este rol.</div>
}