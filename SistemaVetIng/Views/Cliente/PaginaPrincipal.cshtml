    <script src="~/js/menuhamburguesa.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("NToastNotify")

    <script>
        // Espera a que toda la página cargue
        document.addEventListener("DOMContentLoaded", function() {

            const formPagos = document.getElementById("form-pagos");
            const checkboxes = document.querySelectorAll(".chk-pago");
            const totalSpan = document.getElementById("total-a-pagar");
            const pagarBtn = document.getElementById("btn-pagar-seleccionados");

            // Si no hay botón, no hacemos nada (ej. si no hay pagos)
            if (!pagarBtn) {
                return;
            }

            // --- FUNCIÓN 1: Calcular el total ---
            function actualizarTotal() {
                let total = 0;
                checkboxes.forEach(chk => {
                    if (chk.checked) {
                        // Usamos 'dataset.monto' para leer el 'data-monto' del HTML
                        // Reemplazamos coma por punto por si acaso
                        let monto = chk.dataset.monto.replace(",", ".");
                        total += parseFloat(monto);
                    }
                });

                // Actualiza el texto del total
                totalSpan.textContent = total.toFixed(2);
            }

            // Cada vez que un checkbox cambia, actualizamos el total
            checkboxes.forEach(chk => {
                chk.addEventListener("change", actualizarTotal);
            });


            // --- FUNCIÓN 2: Enviar el formulario ---
            formPagos.addEventListener("submit", function(event) {
                // Prevenimos que el formulario se envíe de la forma tradicional
                event.preventDefault();

                const idsSeleccionados = [];
                checkboxes.forEach(chk => {
                    if (chk.checked) {
                        idsSeleccionados.push(chk.value);
                    }
                });

                if (idsSeleccionados.length === 0) {
                    alert("Por favor, seleccione al menos una atención para pagar.");
                    return;
                }

                // Deshabilitamos el botón para evitar doble clic
                pagarBtn.disabled = true;
                pagarBtn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Procesando...';

                // Obtenemos el Token de seguridad que pusimos en el formulario
                const token = formPagos.querySelector('input[name="__RequestVerificationToken"]').value;

                // Usamos fetch para enviar los datos al controlador
                fetch('/Pagos/GenerarLinkDePago', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        // Enviamos el token en el header
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(idsSeleccionados) // Enviamos el array de IDs
                })
                .then(response => {
                    // Si el backend nos redirige (como lo hace tu controlador), seguimos la redirección
                    if (response.redirected) {
                        window.location.href = response.url;
                        return;
                    }

                    // Si hay un error (ej. un BadRequest)
                    return response.text().then(errorMsg => {
                         throw new Error(errorMsg || "No se pudo iniciar el pago.");
                    });
                })
                .catch(error => {
                    alert('Error: ' + error.message);
                    // Habilitamos el botón de nuevo si falló
                    pagarBtn.disabled = false;
                    pagarBtn.innerHTML = '<i class="fa-solid fa-credit-card"></i> Pagar Seleccionados';
                });
            });

        });
    </script>
</body>
</html>
